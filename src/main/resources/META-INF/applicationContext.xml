<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="infrastructureContext.xml"/>

    <!-- the parent application context definition for the springapp application -->

    <bean id="productManager" class="app.service.SimpleProductManagerService">
        <property name="productRepository" ref="productRepository"/>
    </bean>

    <bean id="productRepository" class="app.repository.JdbcProductRepository">
        <property name="dataSource" ref="dataSource"/>
    </bean>
</beans>